<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_game">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/question_title_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_question_title"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/question_title_image"
        android:layout_alignTop="@id/question_title_image"
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:textColor="@color/orangered"
        android:textSize="22sp"/>

        <ImageView
            android:id="@+id/question_type_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_question_type"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/question_title_image"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/question_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/question_type_image"
            android:layout_alignTop="@id/question_type_image"
            android:layout_marginLeft="5dp"
            android:textColor="@color/orangered"
            android:gravity="bottom"
            android:textSize="22sp"/>
        <ImageView
            android:id="@+id/question_score_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_score"
            android:layout_toLeftOf="@+id/question_score"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/question_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/yellow"
            android:gravity="bottom"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/question_time_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_time"
            android:layout_toLeftOf="@+id/question_time"
            android:layout_below="@id/question_score_image"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_below="@id/question_score_image"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:textColor="@color/yellow"
            android:textSize="18sp"
            android:text="30"/>

        <ImageView
            android:id="@+id/share_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_share"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/question_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:lineSpacingExtra="2dp"
        android:lineSpacingMultiplier="1.2"
        android:padding="10dp"
        android:text="text"
        android:textStyle="bold"
        />

    <RadioGroup
        android:id="@+id/question_items_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <RadioButton
            android:id="@+id/question_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/dimgray"
            android:text="text"/>
        <RadioButton
            android:id="@+id/question_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/dimgray"
            android:text="text"/>
        <RadioButton
            android:id="@+id/question_item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/dimgray"
            android:text="text"/>
        <RadioButton
            android:id="@+id/question_item4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/dimgray"
            android:text="text"/>
    </RadioGroup>

    <Button
        android:id="@+id/send_button"
        android:layout_width="180dp"
        android:layout_height="58dp"
        android:background="@drawable/button_normal_selector"
        android:text="@string/send_button"
        android:textColor="@color/crimson"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal|bottom"/>

    <LinearLayout
        android:id="@+id/ll_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_gravity="bottom">
    </LinearLayout>
</LinearLayout>
